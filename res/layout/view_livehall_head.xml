<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <LinearLayout 
       android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/fengxiangbiao" 
    android:orientation="vertical" 
    android:layout_margin="10dp">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:id="@+id/control_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="154dp"
        android:text="1/4仓位"
        android:textSize="12dp"
        android:textColor="@color/font_grey1"/>
    <TextView 
        android:id="@+id/operate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/control_tv"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="52dp"
        android:textSize="12dp"
        android:textColor="@color/font_grey1"
        android:text="适当卖出"/>
</RelativeLayout>
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView 
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:textColor="@color/font_grey1"
        android:textStyle="bold|italic"
        android:text="2016-03-06"/>
    <TextView 
        android:id="@+id/advice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="70dp"
        android:textSize="12dp"
        android:textColor="@color/font_grey1"
        android:text="政策不明朗，面临前高，逢高减仓"/>
</LinearLayout>

</LinearLayout>
</LinearLayout>
