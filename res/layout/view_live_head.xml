<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical" >
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
            android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <RelativeLayout 
            android:layout_width="1dp"
            android:layout_weight="1"
        android:layout_height="fill_parent">
        <TextView 
            android:id="@+id/shz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="上证指数"
            android:textSize="16dp"/>
         <TextView 
            android:id="@+id/shz_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shz_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:text=""
            android:textSize="15dp"/>
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/shz_two_tv"
             >
         <TextView 
            android:id="@+id/shz_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=""
            android:textSize="13dp"/>
         <TextView 
            android:id="@+id/shz_four_tv"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/shz_three_tv"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=""
            android:textSize="13dp"/>
         </RelativeLayout>
        <View 
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@color/white"/>
        <View 
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentRight="true"
            android:background="@color/simple_grey"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="1dp"
            android:layout_weight="1"
        android:layout_height="fill_parent">
        <TextView 
            android:id="@+id/sz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="深证成指"
            android:textSize="16dp"/>
         <TextView 
            android:id="@+id/sz_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sz_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:text=""
            android:textSize="15dp"/>
         
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sz_two_tv"
             >
         <TextView 
            android:id="@+id/sz_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=""
            android:textSize="13dp"/>
         <TextView 
            android:id="@+id/sz_four_tv"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/sz_three_tv"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="13dp"/>
         </RelativeLayout>
        <View 
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentRight="true"
            android:background="@color/simple_grey"/>
        </RelativeLayout>
       <RelativeLayout 
            android:layout_width="1dp"
            android:layout_weight="1"
        android:layout_height="fill_parent">
        <TextView 
            android:id="@+id/cy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="创业板指"
            android:textSize="16dp"/>
         <TextView 
            android:id="@+id/cy_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cy_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:text=""
            android:textSize="15dp"/>
         
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cy_two_tv"
             >
         <TextView 
            android:id="@+id/cy_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=""
            android:textSize="13dp"/>
         <TextView 
            android:id="@+id/cy_four_tv"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/cy_three_tv"
            android:layout_marginLeft="5dp"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="13dp"/>
         </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>