<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context=".Information_Activity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height54"
        android:background="@color/theme_red"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="88dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@drawable/duel_yourpoint_title"
            android:gravity="center" />

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="@dimen/normal_height72"
            android:layout_height="@dimen/normal_height54"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/duel_point_send" />
    </RelativeLayout>

    <AutoCompleteTextView
        android:id="@+id/point_edit"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/duel_point_edit"
        android:gravity="left|top"
        android:padding="5dp"
        android:maxLength="200"
        android:hint="最多可输入200字"
        android:textColor="@color/color_9"
        android:textSize="15dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="选择观点"
            android:textColor="@color/color_9"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rb_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:checked="true"
            android:gravity="center_vertical"
            android:text="看涨"
            android:textColor="@color/color_9"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rb_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="看跌"
            android:textColor="@color/color_9"
            android:textSize="18dp" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/color_9" />

            <Button
                android:id="@+id/bt_send"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/duel_send_bt"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>