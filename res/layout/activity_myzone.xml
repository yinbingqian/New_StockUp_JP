<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/register_bg"
    android:orientation="vertical"
    tools:context=".Information_Activity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height54"
        android:background="@color/theme_red"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <ImageView
            android:id="@+id/tv_title"
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@drawable/personal_title_img"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/head_background_select"
            android:gravity="center"
            android:text="@string/welcome_rigister"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize18"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/setting"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/edit_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include
            android:id="@+id/ic_unlogin"
            layout="@layout/activity_unlogin"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ic_loged"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/personal_layout"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/personal_user_bg"
                android:orientation="horizontal" >

                <com.sxit.utils.XCRoundImageView
                    android:id="@+id/img_loginUser"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/user_none" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="股票小白"
                    android:textColor="#666666"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/personal_type_bg"
                    android:gravity="center"
                    android:text="达人"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="48dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:text="第26位"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/personal_arrow_bg" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/simple_grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ps_money"
                        android:textColor="@color/color_9"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_ps_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="500"
                        android:textColor="@color/deep_yellow"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="@color/simple_grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ps_contribute"
                        android:textColor="@color/color_9"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_ps_contribute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="180"
                        android:textColor="@color/deep_yellow"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="@color/simple_grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ps_active"
                        android:textColor="@color/color_9"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_ps_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="11"
                        android:textColor="@color/deep_yellow"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/simple_grey" />

            <LinearLayout
                android:id="@+id/myarticle_layout"
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/simple_grey" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <ImageView
                        android:id="@+id/articel_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/myarticel_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/articel_img"
                        android:gravity="center"
                        android:text="我的帖子"
                        android:textColor="@color/color_9"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/personal_arrow" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/simple_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myquestion_layout"
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <ImageView
                        android:id="@+id/question_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/myquestion_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/question_img"
                        android:gravity="center"
                        android:text="我的提问"
                        android:textColor="@color/color_9"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/personal_arrow" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/simple_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myanswer_layout"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <ImageView
                        android:id="@+id/answer_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/myanswer_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/answer_img"
                        android:gravity="center"
                        android:text="我的解答"
                        android:textColor="@color/color_9"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/personal_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/simple_grey" />

            <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/simple_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/color_9"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/simple_grey" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>