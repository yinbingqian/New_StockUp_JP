<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/register_bg"
    android:orientation="vertical"
    tools:context=".Information_Activity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height54"
        android:background="@color/theme_red"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <ImageView
            android:id="@+id/tv_title"
            android:layout_width="49dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@drawable/login_title_img"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="114dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_edit_bg"
            android:orientation="vertical" >

            <AutoCompleteTextView
                android:id="@+id/actv_username"
                style="@style/login_edittext_style"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:drawableLeft="@drawable/login_user_icon"
                android:hint="@string/register_hint_admin"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/textsize18" />

            <AutoCompleteTextView
                android:id="@+id/actv_password"
                style="@style/login_edittext_style"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:drawableLeft="@drawable/login_psw_icon"
                android:hint="@string/register_hint_password"
                android:password="true"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/textsize18" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/register_password"
            android:textColor="#CCCCCC"
            android:textSize="@dimen/textsize16"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tv_register"
                android:layout_width="188dp"
                android:layout_height="45dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/login_regist_bt"
                android:text="@string/register_admin"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize18" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="188dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/login_login_bt"
                android:text="@string/register_login"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize18" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="选择其他登录方式"
            android:textColor="#CCCCCC"
            android:textSize="@dimen/textsize16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/login_wechat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:text="使用微信登录"
                android:textColor="#888888"
                android:textSize="15dp" />

            <Button
                android:id="@+id/login_qq"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_marginLeft="60dp"
                android:background="@drawable/login_qq"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>