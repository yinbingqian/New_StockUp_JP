<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical" >

    <com.sxit.utils.advert.ImageCycleView
        android:id="@+id/ad_view"
        android:layout_width="fill_parent"
        android:layout_height="160dip" />
<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="#f06000"
        android:orientation="horizontal"
    >
    <ImageView 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:background="@drawable/jiepan"
        />
    <TextView 
        android:id="@+id/scrolltext_tv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:text=""
        android:textColor="#F06000"
        android:background="@drawable/white_bg"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bt_gushidongtai"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gushidongtai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_gushidongtai"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="牛人解盘"
                android:textColor="#333333"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bt_tuwenzhibo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tuwenzhibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tuwenzhibo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="图文直播"
                android:textColor="#333333"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bt_duokongduijue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/duokongduijue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_duokongduijue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="多空对决"
                android:textColor="#333333"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/bt_jiabinguandian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/zhinangguandian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_jiabinguandian"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="智囊观点"
                android:textColor="#333333"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#CCCCCC" />

</LinearLayout>