<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" >

            <com.sxit.utils.XCRoundImageView
                android:id="@+id/questiondetail_headpic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/user_none" />

            <TextView
                android:id="@+id/questiondetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/questiondetail_headpic"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="哈哈哈"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/questiondetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questiondetail_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/questiondetail_headpic"
                android:text="5分钟前"
                android:textColor="@color/deep_yellow"
                android:textSize="12dp" />

            <Button
                android:id="@+id/questiondetail_btn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:text="有帮助"
                android:textColor="@color/white"
                android:background="@color/deep_yellow"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" >

            <TextView
                android:id="@+id/questiondetail_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:text="问题描述，目前仓位XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                android:textColor="#777777"
                android:textSize="14dp" />
            
            <com.sxit.utils.live.NoScrollGridView
                android:id="@+id/questiondetail_gridview"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/questiondetail_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:columnWidth="80dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
            
        </RelativeLayout>
    </LinearLayout>
<TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:text="(以上回答仅供学习参考，不构成任何买卖操作依据，不保证任何收益)"
            android:textSize="10dp"
            android:textColor="#999999"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#EEEEEE" />

</LinearLayout>